pipeline {
    agent {
        docker {
	    image 'python:2.7.16-slim'
	    args '--user root'
            }
    }
    stages {
        stage('Build') { 
	    when {
		changeset "**/vote/**"
	    }
            steps {
                echo 'Compiling worker app'
		dir('vote'){
		    sh 'pip install -r requirements.txt' 
		}
                echo '### FINISHED BUILDING ###'
            }
        }
        stage('Test') { 
	    when {
		changeset "**/vote/**"
	    }
            steps {
		dir('vote'){
		    sh 'nosetests -v'
		}
                echo '### FINISHED TESTING ###'
            }
        }
    }
    post { 
        always { 
            echo 'This pipeline run is completed!'
        }
    }
}
